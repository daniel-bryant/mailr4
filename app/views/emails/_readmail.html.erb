<li class="mail-li">
  <a id="read-<%= readmail.id %>" data-toggle="modal" href="#readModal">
    <div class="address">
      <% if readmail.box==1 %>
        <%= readmail.from %>
      <% else %>
        <%= readmail.to %>
      <% end %>
    </div>
    <div class="subject">
      <%= readmail.subject %>
      <div class="date">
        <%= readmail.date %>
      </div>
    </div>
  </a>
</li>

<%= javascript_tag do %>
  $(function() {
    $('a#read-<%= readmail.id %>').click(function(event){
      event.preventDefault();

      $('h4#read-form-new').empty();
      $('h4#read-form-subject').text('Subject: <%= j readmail.subject %>');
      $('div#read-form-body').text('some text');

      if (<%= j readmail.box.to_s %> == 1) {
        $('h4#read-form-from').text('From: <%= j readmail.from %>');
        $('h4#read-form-to').text('To: me');

        $('input#email_to').val('<%= j readmail.from %>');
        $('input#email_subject').val('RE: <%= j readmail.subject %>');
      } else {
        $('h4#read-form-from').text('From: me');
        $('h4#read-form-to').text('To: <%= j readmail.to %>');

        $('input#email_to').val('<%= j readmail.to %>');
        $('input#email_subject').val('<%= j readmail.subject %>');
      }

    });
  });
<% end %>
